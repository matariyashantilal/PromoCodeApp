<div class="col-md-12">
<div class="panel panel-primary">
    <div class="panel-heading">
      <h3 class="panel-title">
        <i class="fa fa-archive"></i> Listing Offer Details
      </h3>
    </div>
    <div class="panel-body">
      <div class="table-responsive">
        <div id="example_wrapper" class="dataTables_wrapper" role="grid">
          <div class="dataTables_length" id="example_length">
            
          </div>
          <div id="example_filter" class="dataTables_filter pull-right">
            
          </div>
          <table aria-describedby="example_info" class="table table-bordered table-hover table-striped display dataTable" id="example">
            <thead>
              <tr role="row">
                <th>Offer Id</th>
                <th>Offer Name</th>
                <th>Customer Name</th>
                <th>Email</th>
                <th>Claimed Status</th>
              </tr>
            </thead>
       
            <tbody aria-relevant="all" aria-live="polite" role="alert">
            <% @offer_details.each do |offer_detail| %>
              <tr class="gradeA odd">
                <td><%= offer_detail.offer.id %></td>
                <td><%= link_to offer_detail.offer.offer_name,business_offer_path(offer_detail.offer) %></td>
                <td><%= link_to offer_detail.customer.fullname %></td>
                <td><%= offer_detail.customer.email %></td>
                <td>
                  <div class="btn-group is_claimed_<%= offer_detail.id %>">
                    <%= render 'change_isclaimed', :offer => offer_detail %>
                  </div>
                </td>
              </tr>
            <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
</div>
</div>