<%= form_for([:business,@business_ibeacon], :html => {:class => "form-horizontal col-md-8"}) do |f| %>
  <div class="form-group">
    <lable class="col-sm-3 control-label"><%= f.label :store_id ,"Store"  %></lable>
    <div class="col-sm-9">
      <%= f.select :store_id, current_user.stores.pluck(:name, :id), hide_label: true, class: "form-control input-sm"  %>
    </div>
  </div>

  <div class="form-group">
    <label  class="col-sm-3 control-label"><%= f.label :udid %></label>
    <div class="col-sm-9">
      <%= f.text_field :udid, :class => "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <label  class="col-sm-3 control-label"><%= f.label :major %></label>
    <div class="col-sm-9">
      <%= f.text_field :major, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <label  class="col-sm-3 control-label"><%= f.label :minor %></label>
    <div class="col-sm-9">
      <%= f.text_field :minor, :class => "form-control" %>
    </div>
  </div>

  <div class="actions">
    <%= f.submit class: "btn btn-success" %>
  </div>
<% end %>
