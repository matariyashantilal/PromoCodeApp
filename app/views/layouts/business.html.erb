<!DOCTYPE html>
<html>
    <head>
      <title>InDorse</title>
      <%= stylesheet_link_tag  'business', media: 'all', 'data-turbolinks-track' => true %>
      <%= javascript_include_tag 'business', 'data-turbolinks-track' => true %>
      <%= csrf_meta_tags %>
          <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
              <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
              <script src="https://oss.maxcdn.com/libs/respond.js/1.3.0/respond.min.js"></script>
              <![endif]-->
            <script>
                $(document).ready(function() {
                    $('.site-holder').hide();
                // $('.navbar').hide();
                // $('.box-holder').hide();
                });
            </script>
            <script>
                $('document').ready(function(){
                    $("[name='my-checkbox']").bootstrapSwitch();
                });
            </script>

    </head>
    <body>
        <div class="site-holder">
            <%= render 'layouts/business/header' %>

            <div class="box-holder">
                <%= render 'layouts/business/sidebar' %>

                <!-- .content -->
                <div class="content  animated fadeInBig">
                    <div class=" breadcrumb-holder">
                        <ul class="breadcrumb">
                            <li class="active"></li>
                            <li>
                                <a href="#">Dashboard</a>
                            </li>
                            <li>
                                <a href="#">Template</a>
                            </li>
                        </ul>
                        <a href="#" class="options-toggle">
                            <i class="fa fa-th"></i>
                        </a>
                        <a href="#" class="refresh-storage">
                            <i class="fa fa-refresh"></i>
                        </a>
                    </div>

                    <%= yield %>

                </div>
            <!-- /.content -->
            </div>
        </div>
    </body>
</html>
