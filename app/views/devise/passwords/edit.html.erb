<div class="row">
  <div class="login_back form-signin">
    <div class=""><!--Delighted login form-->
      <div class="delighted-login ">
        <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
          <%= f.hidden_field :reset_password_token %>
          <%= render 'shared/error_messages', object: f.object %>
      
            <div class="header">
                <h3>Change your password</h3>
                <ul class="pull-right">
                </ul>
            </div>
            <div class="form-section">
                <div class="input-group">
                    <span class="input-group-addon"><i class="fa fa-lock"></i></span>
                    <%= f.password_field :password, autocomplete: "off", :class =>"form-control", :placeholder => "Password" %>
                    <span class="input-group-addon"><i class="fa fa-lock"></i></span>
                    <%= f.password_field :password_confirmation, autocomplete: "off", :class =>"form-control", :placeholder => "Password" %>
                </div>
                <button type="submit" class="btn btn-success btn-block"><strong>Change my password</strong></button>    
            </div>
                <p><a href="password/new" >Forgot Your Password ?</a></p>
          <% end %>
      </div><!--end of delighted log in forn-->
    </div>
  </div>
</div>  