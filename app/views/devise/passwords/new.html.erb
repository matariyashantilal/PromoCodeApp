<div class="row">
  <div class="login_back form-signin">
    <div class="">
      <div class="delighted-login ">
				<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
       
      
  				 <div class="header">
              <h3>Forgot your password</h3>
          </div>
          <div class="form-section">
            <%= render 'shared/error_messages', object: f.object %>
              <div class="input-group">
                  <span class="input-group-addon"><i class="fa fa-user"></i></span>
                   <%=f.email_field :email, autofocus: true, :class =>"form-control", :placeholder => "Email Id" %>
  		         </div>
              <button type="submit" class="btn btn-success btn-block"><strong>Send me reset password instructions</strong></button>    
          </div>
          <p class="forgotpass"><a href="/users/sign_in" >Log In?</a></p>
          <% end %>
      </div>
    </div>
  </div>
</div>  
