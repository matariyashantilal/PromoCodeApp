
<div class="row">
  <div class="login_back form-signin">
    <div class=""><!--Delighted login form-->
      <div class="delighted-login ">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="header">
              <h3>LOGIN</h3>
          </div>
          <div class="form-section">
          <%= devise_error_messages! %>
          <% puts("#{resource.errors.inspect}") %>
             <%= render 'shared/error_messages', object: f.object %>
              <div class="input-group">
                  <span class="input-group-addon"><i class="fa fa-user"></i></span>
                   <%=f.email_field :email, autofocus: true, :class =>"form-control", :placeholder => "User name" %>
              </div>
              <div class="input-group">
                  <span class="input-group-addon"><i class="fa fa-lock"></i></span>
                  <%= f.password_field :password, autocomplete: "off", :class =>"form-control", :placeholder => "Password" %>
              </div>
              <button type="submit" class="btn btn-success btn-block"><strong>Log in</strong></button>    
          </div>
          <p><a href="password/new" >Forgot Your Password ?</a></p>
          <% end %>
      </div><!--end of delighted log in forn-->
    </div>
  </div>
</div>  