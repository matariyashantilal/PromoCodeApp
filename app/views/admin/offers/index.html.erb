<div class="col-md-12">
<div class="panel panel-primary">
    <div class="panel-heading">
      <h3 class="panel-title">
        <i class="fa fa-archive"></i> Listing Offers
        <span class="panel-options">
          <%= link_to 'New Offer', new_admin_offer_path, class: "label label-success" %>
        </span>
      </h3>
    </div>
    <div align="right" style="margin-right:2%;margin-top: 5px;" > 
              <%= form_tag(admin_offers_path, :method => "GET") do %>
              <span> Filter by store </span>
               <%= select_tag 'store_id', options_from_collection_for_select(@stores, "id", "name", params[:store_id]), :prompt => 'All', hide_label: true, class: "input-sm", onchange: "this.form.submit();"  %>
          <% end %>
        </div>
    <div class="panel-body">
      <div class="table-responsive">
        <div id="example_wrapper" class="dataTables_wrapper" role="grid">
          <div class="dataTables_length" id="example_length">
            
          </div>
          <div id="example_filter" class="dataTables_filter pull-right">
            
          </div>
          <table aria-describedby="example_info" class="table table-bordered table-hover table-striped display dataTable" id="example">
          <% if @offers.present? %>
            <thead>
              <tr role="row">
                <th>Store Name</th>
                <th>Offer Name</th>
                <th>Task To Perform</th>
                <th>Offer For</th>
                <th>Offer Type</th>
                <th>Punch Count</th>
                <th>Offer Valid Upto</th>
                <th>Offer Expires On</th>
                <th colspan="3">Actions</th>
              </tr>
            </thead>
       
            <tbody aria-relevant="all" aria-live="polite" role="alert">
            <% @offers.each do |offer| %>
              <tr class="gradeA odd">
                <td><%= offer.store.name %></td>
                <td><%= offer.offer_name %></td>
                <td><%= offer.task_to_perform %></td>
                <td><%= offer.offer_for %></td>
                <td><%= offer.offer_type %></td>
                <td><%= offer.punch_count %></td>
                <td><%= offer.offer_valid_upto %></td>
                <td><%= offer.offer_expire_on %></td>
                <td><%= link_to "",admin_offer_path(offer), class: "fa fa-eye" %></td>
                <td><%= link_to '', edit_admin_offer_path(offer), class: "fa fa-pencil" %></td>
                <td><%= link_to '', admin_offer_path(offer), class: "fa fa-trash-o", method: :delete, data: { confirm: 'Are you sure?' } %></td>
              </tr>
            <% end %>
            <% else %>
              Offer not found. Please enter a valid offer first.
            <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
</div>
</div>


<br>