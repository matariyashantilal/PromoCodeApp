<h1>Listing offers</h1>

<table>
  <thead>
    <tr>
      <th>Offer name</th>
      <th>Task to perform</th>
      <th>Offer for</th>
      <th>Offer type</th>
      <th>Punch count</th>
      <th>Offer valid upto</th>
      <th>Offer expire on</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @offers.each do |offer| %>
      <tr>
        <td><%= offer.offer_name %></td>
        <td><%= offer.task_to_perform %></td>
        <td><%= offer.offer_for %></td>
        <td><%= offer.offer_type %></td>
        <td><%= offer.punch_count %></td>
        <td><%= offer.offer_valid_upto %></td>
        <td><%= offer.offer_expire_on %></td>
        <td><%= link_to 'Show', admin_offer_path(offer) %></td>
        <td><%= link_to 'Edit', edit_admin_offer_path(offer) %></td>
        <td><%= link_to 'Destroy', admin_offer_path(offer), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

