<div class="col-md-12">
<div class="panel panel-primary">
    <div class="panel-heading">
      <h3 class="panel-title">
        <i class="fa fa-archive"></i> Listing iBeacons

         <span class="panel-options">
            
          <%= link_to 'New iBeacons', new_admin_ibeacon_path, class: "label label-success" %>
        </span>
        
      </h3>

    </div>
    <div align="right" style="margin-right:2%;margin-top: 5px;" > 
              <%= form_tag(admin_ibeacons_path, :method => "GET") do %>
              <span> Filter by store </span>
               <%= select_tag 'store_id', options_from_collection_for_select(@stores, "id", "name", params[:store_id]), :prompt => 'All', hide_label: true, class: "input-sm", onchange: "this.form.submit();"  %>
          <% end %>
        </div>
    <div class="panel-body">
      <div class="table-responsive">
        <div id="example_wrapper" class="dataTables_wrapper" role="grid">
          <div class="dataTables_length" id="example_length">
            
          </div>
          <div id="example_filter" class="dataTables_filter pull-right">
            
          </div>
          <table aria-describedby="example_info" class="table table-bordered table-hover table-striped display dataTable" id="example">
            <thead>
              <tr role="row">
                <th>Store</th>
                <th>Udid</th>
                <th>Major</th>
                <th>Minor</th>
                <th colspan="3">Actions</th>
              </tr>
            </thead>
       
            <tbody aria-relevant="all" aria-live="polite" role="alert">
            <% @ibeacons.each do |ibeacon| %>
              <tr class="gradeA odd">
                <td><%= ibeacon.store.try(:name) %></td>
                <td><%= ibeacon.udid %></td>
                <td><%= ibeacon.major %></td>
                <td><%= ibeacon.minor %></td>
                <td><%= link_to "",admin_ibeacon_path(ibeacon), class: "fa fa-eye" %></td>
                <td><%= link_to '', edit_admin_ibeacon_path(ibeacon), class: "fa fa-pencil" %></td>
                <td><%= link_to '', admin_ibeacon_path(ibeacon), class: "fa fa-trash-o", method: :delete, data: { confirm: 'Are you sure?' } %></td>
              </tr>
            <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
</div>
</div>


<br>


